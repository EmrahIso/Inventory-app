<div class="category">
  <h2><%= category.name %></h2>
  <div class="category-actions">
    <%- include('details-button', { id: category.id, type: 'category' }) %>
    <%- include('edit-button', { id: category.id, type: 'category' }) %>
    <%- include('delete-button', { id: category.id, type: 'category' }) %>
    <a href="/new/item?category_id=<%= category.id %>" class="add-btn">Add New Item</a>
  </div>
  <table class="items-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.brand %></td>
          <td>$<%= item.price %></td>
          <td><%= item.stock %></td>
          <td><%= item.description %></td>
          <td>
            <%- include('details-button', { id: item.id, type: 'item' }) %>
            <%- include('edit-button', { id: item.id, type: 'item' }) %>
            <%- include('delete-button', { id: item.id, type: 'item' }) %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>