<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Edit Item</title>
  </head>
  <body>
    <div class="container">
      <h1>Edit Item</h1>
      <% if (errors && errors.length > 0) { %>
        <div class="form-errors">
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      <form method="POST" action="/edit/item/<%= item.id %>" class="form">
        <label for="item-name">Item Name:</label>
        <input
          type="text"
          id="item-name"
          name="item-name"
          minlength="1"
          maxlength="20"
          value="<%= (typeof data !== 'undefined' && data && data['item-name']) ? data['item-name'] : item.name %>"
          required
        />

        <label for="item-brand">Brand:</label>
        <input
          type="text"
          id="item-brand"
          name="item-brand"
          maxlength="20"
          value="<%= (typeof data !== 'undefined' && data && data['item-brand']) ? data['item-brand'] : item.brand %>"
        />

        <label for="item-price">Price:</label>
        <input
          type="number"
          id="item-price"
          name="item-price"
          step="0.01"
          min="0"
          value="<%= (typeof data !== 'undefined' && data && data['item-price']) ? data['item-price'] : item.price %>"
          required
        />

        <label for="item-stock">Stock:</label>
        <input
          type="number"
          id="item-stock"
          name="item-stock"
          min="0"
          value="<%= (typeof data !== 'undefined' && data && data['item-stock']) ? data['item-stock'] : item.stock %>"
          required
        />

        <label for="item-description">Description:</label>
        <textarea id="item-description" maxlength="50" name="item-description"><%= (typeof data !== 'undefined' && data && data['item-description']) ? data['item-description'] : item.description %></textarea>

        <label for="admin-password" style="color: red; font-weight: bold;">Admin Password (Required):</label>
        <input
          type="password"
          id="admin-password"
          name="admin-password"
          required
          style="border: 2px solid red;"
        />

        <button type="submit">Update Item</button>
        <a href="/item/<%= item.id %>">Cancel</a>
      </form>
    </div>
  </body>
</html>
