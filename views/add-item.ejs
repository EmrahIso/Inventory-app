<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Add New Item</title>
  </head>
  <body>
    <div class="container">
      <h1>Add New Item</h1>
      <% if (errors && errors.length > 0) { %>
        <div class="form-errors">
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      <form method="POST" action="/new/item?category_id=<%= category_id %>" class="form">
        <label for="item-name">Item Name:</label>
        <input type="text" id="item-name" name="item-name" minlength="1" maxlength="20" required value="<%= (typeof data !== 'undefined' && data && data['item-name']) ? data['item-name'] : '' %>" />

        <label for="item-brand">Brand:</label>
        <input type="text" id="item-brand" name="item-brand" maxlength="20" value="<%= (typeof data !== 'undefined' && data && data['item-brand']) ? data['item-brand'] : '' %>" />

        <label for="item-price">Price:</label>
        <input type="number" id="item-price" name="item-price" step="0.01" min="0" required value="<%= (typeof data !== 'undefined' && data && data['item-price']) ? data['item-price'] : '' %>" />

        <label for="item-stock">Stock:</label>
        <input type="number" id="item-stock" name="item-stock" min="0" required value="<%= (typeof data !== 'undefined' && data && data['item-stock']) ? data['item-stock'] : '' %>" />

        <label for="item-description">Description:</label>
        <textarea id="item-description" maxlength="50" name="item-description"><%= (typeof data !== 'undefined' && data && data['item-description']) ? data['item-description'] : '' %></textarea>
        <button type="submit">Add Item</button>
        <a href="/">Cancel</a>
      </form>
    </div>
  </body>
</html>
